}

.content-paner-info {
  position: relative;
  display: flex;
  justify-content: left;
  align-items: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #333 !important;
}

.content-paner-info:nth-last-of-type(n+2) {
  border-bottom: 1px solid #efefef;
}

.content-paner-info::after {
  content: '';
  position: absolute;
  top: 27rpx;
  right: 4rpx;
  width: 27rpx;
  height: 27rpx;
  border-top: 2px solid #efefef;
  border-right: 2px solid #efefef;
  transform: rotate(45deg);
}

